<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd "
      autoReload="true"
      internalLogFile="internalNLogFile.txt"
      internalLogLevel="Trace">
    <variable name="logDirectory" value="DtTelloDroneLogs/" />

    <!-- the targets to write to -->
    <targets async="true">
        <!-- write logs to file -->
        <target name="console" 
                xsi:type="Console"
                layout="${time}|${logger}|${message}" />
        <target name="debugger" 
                xsi:type="Debugger" 
                layout="${logger}::${message}"/>
        <target 
            name="logfile" 
            xsi:type="File" 
            fileName="${logDirectory}/DroneState.txt" 
            layout="`${time}|${logger}|${message}`" />
        <!-- Logs für das Flugverhalten und der Sender, der die Steuerung eingegeben hat. -->
        <!-- https://stackoverflow.com/questions/17269456/how-to-create-new-log-file-for-each-application-run -->
        <target 
            name="logflightparameter" 
            xsi:type="File"
            fileName="${logDirectory}/flightInfoDirectory/${shortdate}/flight.${longdate:cached=true}.log" 
            layout="${time} :: ${message}"/>
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <!-- Trace Nachrichten -->
        <!-- Alle Nachrichten -->
        <!-- Filtere die Fluginformationen -->
        <!-- Filtere die Fluginformationen mit Steuerung und Sende und Antort über UDP-->
        <!-- Filtere Rohdaten von der Drohne und dem darauf resultiernden Flugzustand.-->
        <logger name="*" level="trace" writeTo="logflightparameter" />

        <!-- Info Nachrichten -->
        <logger name="*" minlevel="Info" writeTo="console"/>
        
        <!-- Filtere Start und Ende des Programms mit Abbau der Ressourcen-->
        <!-- Start und Ende des Drohnenflugs-->
        
        <!-- Warn nachrichten -->
        <!-- Fehlermeldungen von der Drohne -->
        
        <!-- Error Nachrichten -->
        <!-- Fehlermeldeungen vom System -->
        
    </rules>
</nlog>